
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@+id/bottom_drawable">
    <shape
        android:padding="10dp"
        android:shape="rectangle">

        <solid android:color="#BF8E00" />
        <corners android:radius="8dp" />

    </shape>
</item>
<item android:bottom="6dp" android:id="@+id/top_drawable">
    <shape
        android:padding="10dp"
        android:shape="rectangle">

        <solid android:color="#F7BE1F" />
        <corners android:radius="8dp" />

    </shape>
</item>
</layer-list>

