<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bottom_drawable">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorDefaultShadow" />
            <corners android:radius="@dimen/button_default_corner_radius" />

        </shape>
    </item>
    <item
        android:id="@+id/top_drawable"
        android:bottom="@dimen/button_shadow_bottom">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorDefaultPrimary" />
            <corners android:radius="@dimen/button_default_corner_radius" />

        </shape>
    </item>
</layer-list>

